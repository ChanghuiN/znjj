<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客厅灯" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/mian_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="#88d4d4d4"
            android:gravity="center"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_gravity="center"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/main_ll_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ll_test1"
                        android:layout_width="wrap_content"
                        android:layout_height="46px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:background="@drawable/tab_disele"
                        android:gravity="center"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:text="客厅"
                        android:textSize="25px" />

                    <TextView
                        android:layout_width="94px"
                        android:layout_height="46px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:background="@drawable/tab_disele"
                        android:gravity="center"
                        android:text="厨房2"
                        android:textSize="25px" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="218px"
            android:layout_height="110px"
            android:layout_gravity="right"
            android:layout_marginTop="62px"
            android:background="@drawable/time_back"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015年8月12日"
                    android:textColor="#fefefe"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/main_tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text="星期二"
                    android:textColor="#5bffbf"
                    android:textSize="12px" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="3px"
                android:text="室内温度：20%"
                android:textColor="#fefefe"
                android:textSize="20px" />

            <TextView
                android:id="@+id/main_tv_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="3px"
                android:text="室内湿度：23"
                android:textColor="#fefefe"
                android:textSize="20px" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_ll_wel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/erweima"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="42px"
            android:text="请扫描下方二维码绑定微信公众平台添加房间与绑定设备"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/wel_iv"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28px" />

    </LinearLayout>

</FrameLayout>